{
  "log": {
    "level": "info"
  },
  "dns": {
    "servers": [
      {
        "address": "tls://8.8.8.8",
        "strategy": "ipv4_only"
      }
    ]
  },
  "inbounds": [
    {
      "type": "hysteria2",
      "listen": "::",
      "listen_port": 8443,
      "sniff": true,
      "up_mbps": 300, // 服务器上行带宽
      "down_mbps": 300, // 服务器下行带宽
      "users": [
        {
          "name": "imlala",
          "password": "example" // 设置连接密码
        }
      ],
      "tls": {
        "enabled": true,
        "acme": {
          "domain": [
            "example.com"
          ],
          "data_directory": "/etc/sing-box",
          "default_server_name": "example.com",
          "email": "123456789admin@gmail.com"
        }
      }
    }
  ],
  "outbounds": [
    {
      "type": "direct"
    },
    {
      "type": "dns",
      "tag": "dns-out"
    }
  ],
  "route": {
    "rules": [
      {
        "protocol": "dns",
        "outbound": "dns-out"
      }
    ]
  }
}
